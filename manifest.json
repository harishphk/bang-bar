{
  "manifest_version": 3,
  "name": "Bang Bar",
  "version": "1.0.2",
  "description": "DuckDuckGo-style bangs without pressing Tab",
  "author": "Harish Kumar",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "omnibox"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/bb-16.png",
    "48": "icons/bb-48.png",
    "128": "icons/bb-96.png"
  },
  "omnibox": {
    "keyword": "!!"
  },
  "web_accessible_resources": [{
    "resources": ["bangs.json"],
    "matches": ["<all_urls>"]
  }]
}
